<%- include("_header") -%>

    <h1>ลงทะเบียน</h1>

    <form action="/register" method="post">
        <div class="form-horizontal">
            <div class="form-group row mt-3">
                <label class="col-form-label col-sm-2" for="name">ชื่อ</label>
                <div class="col-sm-12">
                    <input autofocus class="form-control" name="name"  />
                </div>
            </div>

            <div class="form-group row mt-3">
                <label class="col-form-label col-sm-2" for="Author">email</label>
                <div class="col-sm-12">
                    <input class="form-control" name="email"  />
                </div>
            </div>
            <div class="form-group row mt-3">
                <label class="col-form-label col-sm-2" for="Author">Password</label>
                <div class="col-sm-12">
                    <input class="form-control" name="password"  />
                </div>
            </div>
            <div class="form-group row mt-3">
                <label class="col-form-label col-sm-2"></label>
                <div class="col-sm-12 d-grid gap-2">
                    <input type="submit" value="Save" class="btn btn-default btn-success" />
                    <a class="btn btn-outline-dark cancel" href="./">Cancel</a>
                </div>
            </div>
        </div>
    </form>

    <%- include("_footer") -%>