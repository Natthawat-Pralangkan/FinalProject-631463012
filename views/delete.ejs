<%- include("_header") -%>

    <h1>Delete a record?</h1>

    <form action="/delete/<%= model.ID %>" method="post">
        <div class="form-horizontal">

            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="name">ชื่อ</label>
                <div class="col-sm-8">
                    <input readonly class="form-control" id="name" value="<%= model.name %>" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="email">Emil</label>
                <div class="col-sm-7">
                    <input readonly class="form-control" id="email" value="<%= model.email %>" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="password">Password</label>
                <div class="col-sm-7">
                    <input readonly class="form-control" id="password" value="<%= model.password %>" />
                </div>
            </div>


            <div class="form-group row">
                <label class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input type="submit" value="Delete" class="btn btn-default btn-danger" />
                    <a class="btn btn-outline-dark cancel" href="/show">Cancel</a>
                </div>
            </div>
        </div>
    </form>

    <%- include("_footer") -%>