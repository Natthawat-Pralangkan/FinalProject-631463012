<%- include("_header") -%>

  <h1>Update a record</h1>

  <form action="/edit/<%= model.ID %>" method="post">
    <div class="form-horizontal">

      <div class="form-group row mt-3">
        <label class="col-form-label col-sm-2" for="name">ชื่อ</label>
        <div class="col-sm-12">
          <input autofocus class="form-control" name="name" value="<%= model.name %>"/>
        </div>
      </div>

      <div class="form-group row mt-3">
        <label class="col-form-label col-sm-2" for="email">email</label>
        <div class="col-sm-12">
          <input class="form-control" name="email" value="<%= model.email %>"/>
        </div>
      </div>
      <div class="form-group row mt-3">
        <label class="col-form-label col-sm-2" for="password">Password</label>
        <div class="col-sm-12">
          <input class="form-control" name="password" value="<%= model.password %>"/>
        </div>
      </div>
      <div class="form-group row mt-3">
        <label class="col-form-label col-sm-2"></label>
        <div class="col-sm-12">
          <input type="submit" value="Update" class="btn btn-default btn-warning"/>
          <a class="btn btn-outline-dark cancel" href="/show">Cancel</a>
        </div>
      </div>
    </div>
  </form>
  <%- include("_footer") -%>